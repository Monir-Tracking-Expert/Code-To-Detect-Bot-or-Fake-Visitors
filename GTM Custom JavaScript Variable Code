function() {
    // Basic environment checks
    if (typeof window === 'undefined' || typeof document === 'undefined') {
        return true; // Likely a bot (server-side rendering)
    }

    if (typeof navigator === 'undefined' || typeof navigator.userAgent !== 'string') {
        return true; // Suspicious environment
    }

    var ua = navigator.userAgent.toLowerCase();

    // 1. User Agent Pattern Detection
    var botPatterns = [
        // Search Engine Bots
        /googlebot/, /bingbot/, /yandex/, /baiduspider/, /duckduckbot/,
        
        // Social Media Bots
        /facebookexternalhit/, /twitterbot/, /linkedinbot/, /pinterest/,
        /whatsapp/, /telegrambot/, /discordbot/, /slackbot/,
        
        // Generic Bot Patterns
        /bot/, /crawl/, /spider/, /slurp/, /crawler/, /scraper/,
        
        // Preview/Embed Services
        /embedly/, /quoralinkpreview/, /outbrain/, /preview/,
        
        // Headless Browsers
        /headless/, /phantomjs/, /selenium/, /puppeteer/,
        
        // Monitoring Tools
        /monitoring/, /uptimerobot/, /pingdom/, /statuscake/,
        
        // AI Crawlers
        /chatgpt/, /gptbot/, /anthropic/, /claudebot/, /cohere/,
        
        // Speed Testing
        /lighthouse/, /gtmetrix/, /pagespeed/
    ];

    for (var i = 0; i < botPatterns.length; i++) {
        if (botPatterns[i].test(ua)) {
            return true; // Bot detected via UA
        }
    }

    // 2. Webdriver Detection (Selenium/Puppeteer)
    if (navigator.webdriver) {
        return true;
    }

    // 3. Check for headless Chrome
    if (window.chrome && !window.chrome.runtime) {
        return true;
    }

    // 4. Check for missing plugins (common in headless)
    if (navigator.plugins && navigator.plugins.length === 0) {
        // Exception: mobile devices legitimately have no plugins
        var isMobile = /android|webos|iphone|ipad|ipod|blackberry|iemobile|opera mini/i.test(ua);
        if (!isMobile) {
            return true;
        }
    }

    // 5. Check for suspicious navigator properties
    if (navigator.languages && navigator.languages.length === 0) {
        return true;
    }

    // 6. Check for automation tools
    if (window.document.documentElement.getAttribute('webdriver')) {
        return true;
    }

    // 7. Check for phantom/callPhantom
    if (window.callPhantom || window._phantom) {
        return true;
    }

    // 8. Check for suspicious permissions
    try {
        if (window.Notification && Notification.permission === 'denied' && 
            navigator.permissions === undefined) {
            return true;
        }
    } catch(e) {}

    return false; // Appears to be a real user
}
